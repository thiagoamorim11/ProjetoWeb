@model SalesWebMvc.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Registro.Name" class="control-label"></label>
                <input asp-for="Registro.Name" class="form-control"></>
                <span asp-validation-for="Registro.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.Senha" class="control-label"></label>
                <input asp-for="Registro.Senha" class="form-control"></>
                <span asp-validation-for="Registro.Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.Email" class="control-label"></label>
                <input asp-for="Registro.Email" class="form-control" />
                <span asp-validation-for="Registro.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.BirthDate" class="control-label"></label>
                <input asp-for="Registro.BirthDate" class="form-control" />
                <span asp-validation-for="Registro.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}